<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <nav class="nav navbar-nav navbar-left">
                <span>Bookers</span>
            </nav>
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                    <li>
                        <a class="glyphicon glyphicon-home home"<%= link_to " Home", user_path(current_user.id) %>></a>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-user users"<%= link_to " Users", users_path %>></a>
                    </li>
                    <li>
                        <%= link_to " Books", books_path, class: "glyphicon glyphicon-book books" %>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-log-out logout"<%= link_to " logout", destroy_user_session_path, method: :delete %>></a>
                    </li>
                    <% else %>
                    <li>
                        <a class="glyphicon glyphicon-home home"<%= link_to " Home", root_path %>></a>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-link about"<%= link_to " About", "#" %>></a>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-edit sign_up"<%= link_to " Sign up", new_user_registration_path %>></a>
                    </li>
                    <li>
                        <a class="glyphicon glyphicon-log-out logout"<%= link_to " login", new_user_session_path %>></a>
                    </li>
                    <% end %>
                </ul>
            </nav>
        </div>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
