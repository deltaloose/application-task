<div class="container">
<div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>
</div>
<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table">
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
</table>
	<% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn-sm btn-danger destroy_book_26090" %>
    <% end %>
</div>
