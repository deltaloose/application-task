<div class="container">
<div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>
</div>
<h2>Book detail</h2>
<table>
	<thead>
		<tr>
			<th class="title">Title</th>
			<th class="opinion">Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
			</tr>
			<tr>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>