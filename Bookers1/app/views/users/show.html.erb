<div class="container">
<div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>
</div>
<h2>Books</h2>
<table>
	<thead>
		<tr>
	      <th></th>
	      <th>Title</th>
	      <th>Opinion</th>
	      <th colspan="3"></th>
	    </tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, size:"50x50", fallback:"no_image.jpg", size: '50x50' %>
			</td>
		</tr>
		<tr>
		  <td class="title">
		  	<%= link_to book_path(book.id) do %>
		  	<%= book.title %>
		  	<% end %>
		  </td>
		</tr>
		<tr>
		  <td class="opinion">
		  	<%= book.body %>
		  </td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>